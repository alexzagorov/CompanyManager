@using TaskMe.Web.ViewModels.Manager.Company
@model DetailsCompanyViewModel

<div class="container">
    <div class="row my-2">
        <div class="col-lg-8 order-lg-2">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="" data-target="#companyView" data-toggle="tab" class="nav-link active">Company</a>
                </li>
                <li class="nav-item">
                    <a href="" data-target="#supervisors" data-toggle="tab" class="nav-link">Supervisors</a>
                </li>
                <li class="nav-item">
                    <a href="" data-target="#edit" data-toggle="tab" class="nav-link">Messages</a>
                </li>
            </ul>
            <div class="tab-content py-4">
                <!--Company part-->              
                <div class="tab-pane active" id="companyView">
                    <h4 class="mb-3">@Model.Name</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Count of Employees</h6>
                            <p>
                                @Model.EmployeesCount
                            </p>
                            <h6>Registered</h6>
                            <p>
                                @Model.CreatedOn.ToShortDateString()
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6>Open Tasks</h6>
                            <p>
                                @Model.TasksCount
                            </p>
                        </div>
                    </div>
                </div>
                <!--Supervisors part -->
                <div class="tab-pane active" id="supervisors">
                    <h4 class="mb-3">Supervisors Control</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Count of Employees</h6>
                            <p>
                                @Model.EmployeesCount
                            </p>
                            <h6>Registered</h6>
                            <p>
                                @Model.CreatedOn.ToShortDateString()
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6>Open Tasks</h6>
                            <p>
                                @Model.TasksCount
                            </p>
                        </div>
                    </div>
                    <!--row-->
                </div>
            </div>
        </div>
        <div class="col-lg-4 order-lg-1 text-center">
            <img src="@Model.CompanyPictureUrl" class="mx-auto img-fluid img-circle d-block" alt="avatar">
        </div>
    </div>

    <!--Tasks-->

    <div class="row-md-12">
        <h5 class="mt-2"><span class="fa fa-clock-o ion-clock float-right"></span>Recent Tasks</h5>
        <table class="table table-sm table-hover table-striped">
            <tbody>
                @foreach (var task in Model.Tasks)
                {
                    <tr>
                        <td>
                            <strong>@task.Name</strong> Start Date: @task.StartDate.ToShortDateString()  End Date: @task.EndDate?.ToShortDateString()<strong>From: @task.OwnerUserName</strong>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!--Employees-->
    <div class="row-md-12 scrollable">
        <h5 class="mt-2"><span class="fa fa-clock-o ion-clock float-right"></span>Employees</h5>
        <table class="table table-sm table-hover table-striped">
            <tbody id="employees">
                <!--Here works the js-->
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script src="~/js/infinitScroll.js"></script>
}
